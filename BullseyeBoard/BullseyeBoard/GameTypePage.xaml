<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="BullseyeBoard.GameTypePage"
             BackgroundImageSource="woodbackground.jpg"
             NavigationPage.HasNavigationBar="False">
    
    <ContentPage.Content>
        <StackLayout Margin="0,30,0,0">
            <Label Text="BullseyeBoard" 
           HorizontalOptions="Center"
           VerticalOptions="StartAndExpand"
               FontAttributes="Bold"
               FontSize="50"
               TextColor="WhiteSmoke"/>

            <Button Text="301"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                BackgroundColor="ForestGreen"
                TextColor="White"
                FontSize="Subtitle"
                HeightRequest="100"
                WidthRequest="250"
                CornerRadius="2"
                Margin="10"
                Clicked="ThreeButton_Clicked"/>

            <Button Text="501"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                BackgroundColor="ForestGreen"
                TextColor="White"
                FontSize="Subtitle"
                HeightRequest="100"
                WidthRequest="250"
                CornerRadius="2"
                Margin="10"
                Clicked="FiveButton_Clicked"/>

            <Button Text="Rules"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                BackgroundColor="ForestGreen"
                TextColor="White"
                FontSize="Subtitle"
                HeightRequest="100"
                WidthRequest="250"
                CornerRadius="2"
                Margin="10"
                Clicked="RulesButton_Clicked"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>